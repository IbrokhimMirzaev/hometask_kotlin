<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/black"
    tools:context=".MainActivity">

    <View
        android:id="@+id/green"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="#4CAF50"/>
    <View
        android:id="@+id/yellow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toStartOf="@+id/green"
        android:layout_above="@+id/green"
        android:background="#FFEB3B"/>
    <View
        android:id="@+id/orange"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toStartOf="@+id/yellow"
        android:layout_above="@+id/yellow"
        android:background="#FF5722"/>
    <View
        android:id="@+id/red"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toStartOf="@+id/orange"
        android:layout_above="@+id/orange"
        android:background="#FF0000"/>
    <View
        android:id="@+id/blue"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toStartOf="@+id/green"
        android:layout_below="@+id/green"
        android:background="#3F51B5"/>
    <View
        android:id="@+id/purple"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toStartOf="@+id/blue"
        android:layout_below="@+id/blue"
        android:background="#673AB7"/>
    <View
        android:id="@+id/violet"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toStartOf="@+id/purple"
        android:layout_below="@+id/purple"
        android:background="#E91E63"/>

</RelativeLayout>
